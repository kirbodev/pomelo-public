{
  "name": "pomelo",
  "version": "0.0.1",
  "description": "The public version of pomegranate",
  "main": "dist/src/index.js",
  "type": "module",
  "scripts": {
    "test": "jest",
    "build": "swc -f ./src/**/* ./package.json -d dist -D --sync",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "start": "bun --env-file=.env.local run ./dist/src/index.js",
    "start:full": "bun run build && bun run start",
    "dev": "bun run scripts/chokidar.js",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org pomelo-ik --project pomelo ./dist && sentry-cli sourcemaps upload --org pomelo-ik --project pomelo ./dist",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kirbodev/pomelo.git"
  },
  "author": {
